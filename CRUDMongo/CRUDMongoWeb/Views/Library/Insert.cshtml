@model CRUDMongoWeb.Models.BookModel

@{
    ViewBag.Title = "Add book";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Log in Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Title)
                @Html.TextBoxFor(m => m.Title)
                @Html.ValidationMessageFor(m => m.Title)
            </li>
            <li>
                <b>Author</b>
            </li>
            <li>
                @Html.LabelFor(m => m.Author.Name)
                @Html.TextBoxFor(m => m.Author.Name)
                @Html.ValidationMessageFor(m => m.Author.Name)
            </li>
            <li>
                @Html.LabelFor(m => m.Author.Surname)
                @Html.TextBoxFor(m => m.Author.Surname)
                @Html.ValidationMessageFor(m => m.Author.Surname)
            </li>
        </ol>
        <input type="submit" value="Save" />
    </fieldset>
}